    <div class="container body-content">
        @RenderBody()
        <hr />
    </div>

    <environment names="Development">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
        <script src="~/lib/materialize/js/propeller.js"></script>
        <!-- Datatable js -->
        <script type="text/javascript" language="javascript" src="~/lib/materialize/js/jquery.dataTables.js"></script>

        <!-- Datatable Bootstrap -->
        <script type="text/javascript" language="javascript" src="~/lib/materialize/js/dataTables.bootstrap.js"></script>

        <!-- Datatable responsive js-->
        <script type="text/javascript" language="javascript" src="~/lib/materialize/js/dataTables.responsive.js"></script>

        <!-- Datatable select js-->
        <script type="text/javascript" language="javascript" src="~/lib/materialize/js/dataTables.select.js"></script>
        <!-- Propeller textfield js -->
        <script type="text/javascript" src="~/lib/materialize/js/textfield.js"></script>

        <!-- Datepicker moment with locales -->
        <script type="text/javascript" language="javascript" src="~/lib/materialize/js/moment-with-locales.js"></script>

        <!-- Propeller Bootstrap datetimepicker -->
        <script type="text/javascript" language="javascript" src="~/lib/materialize/js/bootstrap-datetimepicker.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
    </environment>
    <environment names="Staging,Production">
        <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-2.2.0.min.js"
                asp-fallback-src="~/lib/jquery/dist/jquery.min.js"
                asp-fallback-test="window.jQuery"
                crossorigin="anonymous"
                integrity="sha384-K+ctZQ+LL8q6tP7I94W+qzQsfRV2a+AfHIi9k8z8l9ggpc8X+Ytst4yBo/hH+8Fk">
        </script>
        <script src="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.7/bootstrap.min.js"
                asp-fallback-src="~/lib/bootstrap/dist/js/bootstrap.min.js"
                asp-fallback-test="window.jQuery && window.jQuery.fn && window.jQuery.fn.modal"
                crossorigin="anonymous"
                integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa">
        </script>
        <script src="https://gitcdn.github.io/bootstrap-toggle/2.2.2/js/bootstrap-toggle.min.js"
                asp-fallback-src="~/lib/bootstrap/dist/js/bootstrap-toggle.min.js"
                asp-fallback-test="window.jQuery && window.jQuery.fn && window.jQuery.fn.modal"
                crossorigin="anonymous"
                integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa"></script>
        <script src="~/js/site.min.js" asp-append-version="true"></script>
    </environment>

    @RenderSection("Scripts", required: false)
</body>

</html>
